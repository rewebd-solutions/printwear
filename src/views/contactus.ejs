    <script>
        var notyf = new Notyf({ duration: 3000 });
        let nav = document.querySelector('nav');
        nav.classList.add('dark', 'shadow');
        document.addEventListener('DOMContentLoaded', function () {
            const contacts = [
                { category: 'Drop Shipping & Print on Demand', email: 'dropship@printwear.in', logo: 'logo1.png' },
                { category: 'Bulk Order & General Enquiry', email: 'sai@printwear.in', logo: 'logo1.png' },
                { category: 'Design Help', email: 'designs@printwear.in', logo: 'logo1.png' },
                { category: 'Payments Related', email: 'accounts@printwear.in', logo: 'logo1.png' },
                { category: 'Warehouse & Corporate Office', address: '3rd Street, Valasaravakkam, Chennai-600087', whatsapp: '9025597987', logo: 'logo2.png' }
            ];

            const contactCardsContainer = document.getElementById('contactCardsContainer');

            contacts.forEach(contact => {
                const card = document.createElement('div');
                card.classList.add('contact-card');

                if (contact.email) {
                    card.innerHTML = `
            <i class="fa fa-envelope"></i>
            <p><strong>${contact.category}</strong></p>
            <p>Email: <a href="mailto:${contact.email}">${contact.email}</a></p>
        `;
                } else {
                    card.innerHTML = `
            <i class="fa fa-phone"></i>
            <p><strong>${contact.category}</strong></p>
            <p>Address: ${contact.address}</p>
            <p>WhatsApp: ${contact.whatsapp}</p>
        `;
                }

                contactCardsContainer.appendChild(card);
            });
    
            const form = document.forms[0];
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                document.querySelector(".submit-btn").classList.add("disable-button")
                const data = {};
                new FormData(form).forEach((v, k) => {
                    if (!v) return notyf.error("Check " + k);
                    data[k] = v;
                });
                try {
                    const submitQueryRequest = await fetch("/sendquery", {
                        headers: {
                            "Content-Type": "application/json"
                        },
                        method: "POST",
                        body: JSON.stringify(data)
                    });
                    const submitQueryResponse = await submitQueryRequest.json();
                    if (submitQueryResponse.error) return notyf.error(submitQueryResponse.error);
                    document.querySelector("textarea").value = null;
                    return notyf.success(submitQueryResponse.message);
                } catch (error) {
                    notyf.error(error.message ?? "Something went wrong! Please try later");
                } finally {
                    document.querySelector(".submit-btn").classList.remove("disable-button")
                }
            })    
        });
    </script>
