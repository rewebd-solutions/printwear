        //     }
        // });
        document.addEventListener('DOMContentLoaded', function () {
                const contacts = [
                    { category: 'Drop Shipping & Print on Demand', email: 'dropship@printwear.in', logo: 'logo1.png' },
                    { category: 'Bulk Order & General Enquiry', email: 'sai@printwear.in', logo: 'logo1.png' },
                    { category: 'Design Help', email: 'designs@printwear.in', logo: 'logo1.png' },
                    { category: 'Payments Related', email: 'accounts@printwear.in', logo: 'logo1.png' },
                    { category: 'Warehouse & Corporate Office', address: '3rd Street, Valasaravakkam, Chennai-600087', whatsapp: '9025597987', logo: 'logo2.png' }
                ];

                const contactCardsContainer = document.getElementById('contactCardsContainer');

                contacts.forEach(contact => {
                    const card = document.createElement('div');
                    card.classList.add('contact-card');

                    if (contact.email) {
                        card.innerHTML = `
                <i class="fa fa-envelope"></i>
                <p><strong>${contact.category}</strong></p>
                <p>Email: <a href="mailto:${contact.email}">${contact.email}</a></p>
            `;
                    } else {
                        card.innerHTML = `
                <i class="fa fa-phone"></i>
                <p><strong>${contact.category}</strong></p>
                <p>Address: ${contact.address}</p>
                <p>WhatsApp: ${contact.whatsapp}</p>
            `;
                    }

                    contactCardsContainer.appendChild(card);
                });
            });
    </script>
