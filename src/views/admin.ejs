        const deliveryStatuses = [
            "received",
            "rts",
            "on-hold",
            "processing",
            "rtd",
            "rto",
            "invoiced",
            "shipped",
            "delivered",
            "completed",
            "pending",
        ];
        
        let orderData = [];

        const fetchOrderData = async () => {
