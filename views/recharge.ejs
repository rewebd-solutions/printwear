<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/recharge.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta3/css/all.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <title>Recharge wallet for <%= data.userName %>
    </title>
</head>

<body>
    <% if (data.error) { %>
        <h1>Oops! You shouldn't be here</h1>
    <% } else { %>
        <div class="wallet-box">
            <img src="/images/Logo.png" alt="Printwear logo" />
            <h5><i class="fa fa-info-circle"></i> Your last recharge was on 
                <%= new Date(data.walletData.transactions[data.walletData.transactions.length - 1].transactionDate).toLocaleString() %>
                for â‚¹<%= data.walletData.transactions[data.walletData.transactions.length - 1].amount %> 
            </h5>
            <h4>Enter amount to add to wallet</h4>
            <div class="input-wrapper">
                <input type="text" inputmode="numeric" placeholder="250">
            </div>
            <div class="button-row">
                <button class="pay-button">Pay</button>
                <button class="cancel-button" onclick="handleCancel">Cancel</button>
            </div>
        </div>
        <script>
            const rechargeInput = document.querySelector(".input-wrapper input");
            rechargeInput.oninput = (e) => {
                let instrin = e.target.value;
                e.target.value = instrin.replace(/[^0-9]/g, '');
            }
            const handleCancel = () => window.close();

            setTimeout(() => {
                window.close();
            }, 1000 * 90);

            document.querySelector(".pay-button").addEventListener("click", (e) => {
                try {
                    // make a fetch to backend
                } catch (error) {
                    console.log(error);
                    handleCancel();
                }
            });
        </script>
    <% } %>
</body>

</html>