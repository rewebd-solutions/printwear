<style>
    i.fa {
        margin: 0px 10px 0px 10px;
      }
      
      .sidebar {
        position: fixed;
        width: 300px;
        left: -300px;
        height: 150%;
        top: 0px;
        background: #1e1e1e;
        transition: all .5s ease;
        z-index: 5;
      }
      .sidebar header {
        font-size: 28px;
        color: white;
        line-height: 60px;
        text-align: center;
        background: #1b1b1b;
        user-select: none;
        font-family: 'Montserrat', sans-serif;
      }
      
      .sidebar a {
        display: block;
        height: 50px;
        width: 100%;
        color: white;
        line-height: 50px;
        padding-left: 30px;
        box-sizing: border-box;
        border-bottom: 1px solid black;
        border-top: 1px solid rgba(255, 255, 255, .1);
        border-left: 5px solid transparent;
        font-family: 'Open Sans', sans-serif;
        transition: all .5s ease;
        text-decoration: none;
      }
      
      .sidebar a:active,
      .sidebar a:hover {
        border-left: 5px solid #7275be;
        color: #7275be;
        text-decoration: none;
      }
      
      .sidebar a:focus {
        color: #7275BE;
      }
      
      .sidebar a i {
        font-size: 20px;
        margin-right: 16px;
      }
      
      .sidebar a span {
        letter-spacing: 1px;
        font-size: 13px;
        text-transform: uppercase;
      }
      
      #check {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
      }
      
      label #sidebar-btn,
      label #cancel {
        position: fixed;
        cursor: pointer;
        color: white;
        border-radius: 5px;
        border: 1px solid #262626;
        margin: 15px 30px;
        font-size: 29px;
        background: #262626;
        height: 45px;
        width: 45px;
        text-align: center;
        line-height: 45px;
        transition: all .5s ease;
      }
      
      label #cancel {
        opacity: 0;
        visibility: hidden;
      }
      
      #check:checked~.sidebar {
        left: 0;
      }
      
      #check:checked~label #sidebar-btn {
        margin-left: 305px;
        opacity: 0;
        visibility: hidden;
      }
      
      #check:checked~label #cancel {
        margin-left: 305px;
        opacity: 1;
        visibility: visible;
      }
</style>
